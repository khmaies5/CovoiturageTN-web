{% trans_default_domain 'FOSUserBundle' %}

<link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css'>

<link rel="stylesheet" href="{{ asset('LoginStyle/css/style.css') }}">
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="wrapper">
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <input type="hidden" name="_target_path" value="/Client/check_action" />
        <h2 class="form-signin-heading">Please login</h2>
        <label for="username">{{ 'security.login.username'|trans }}</label></br>
        <input type="text" class="form-control"id="username" name="_username"  placeholder="Email Address"  value="{{ last_username }}" required="required" autofocus="" />
        <label for="password">{{ 'security.login.password'|trans }}</label></br>
        <input class="form-control"  placeholder="Password"  type="password" id="password" name="_password" required="required"/>
        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" > Remember me
        </label>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Login</button>
    </form>
</div>