    <script>
        function initMap() {
            var directionsService = new google.maps.DirectionsService;
            var directionsDisplay = new google.maps.DirectionsRenderer;

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 6,
                center: {lat: 35.6253169, lng: 10.5415953},
            });
            directionsDisplay.setMap(map);
            directionsDisplay.setPanel(document.getElementById('right-panel'));
            calculateAndDisplayAnnonceRoute(directionsService, directionsDisplay);


        }

        function calculateAndDisplayAnnonceRoute(directionsService, directionsDisplay) {
            var from = "{{ annonce.lieuDepart }}";
            var to = "{{ annonce.lieuArrive }}";
            directionsService.route({
                origin: from,
                destination: to,
                travelMode: 'DRIVING'
            }, function(response, status) {
                if (status === 'OK') {
                    directionsDisplay.setDirections(response);

                } else {
                    window.alert('Directions request failed due to ' + status);
                }
            });
        }



        $('[data-countdown]').each(function() {
            var $this = $(this), finalDate = $(this).data('countdown');
            $this.countdown(finalDate, function(event) {
                $this.html(event.strftime('<h5><small>Temps Restant:</small><br>%D Jours %H:%M:%S</h5>'));
            });
        });


    </script>
