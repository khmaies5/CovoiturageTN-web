{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonce</h1>

    <table>
        <tbody>
            <tr>
                <th>Idannonce</th>
                <td>{{ annonce.idAnnonce }}</td>
            </tr>
            <tr>
                <th>Tripdate</th>
                <td>{% if annonce.tripDate %}{{ annonce.tripDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Annoncedate</th>
                <td>{% if annonce.annonceDate %}{{ annonce.annonceDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lieudepart</th>
                <td>{{ annonce.lieuDepart }}</td>
            </tr>
            <tr>
                <th>Lieuarrive</th>
                <td>{{ annonce.lieuArrive }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ annonce.type }}</td>
            </tr>
            <tr>
                <th>Nbrpersonne</th>
                <td>{{ annonce.nbrPersonne }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Critere</th>
                <td>{{ annonce.critere }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ annonce.distance }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('annonce_edit', { 'id': annonce.idAnnonce }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
